extends layout

block content
	div.container
		div.row
			each val in blog
				.panel-group.col-xs-12.col-sm-12.col-md-6.col-lg-6.col-md-offset-3.col-lg-offset-3
					.panel
						.panel-heading
							h3 Edit Blog: #{val.title}
						.panel-body
							form(role='form', method='POST', action="/blog/edit")
								div.form-group
									input.form-control(type='hidden', name='id', value=val._id, required='')
								div.form-group
									input.form-control(type='text', name='title', value=val.title, required='', autofocus='')
								div.form-group
									input.form-control(type='text', name='description', value=val.description, required='')
								div.form-group
									textarea.form-control(name='body', required='')= val.body
								div.form-group
									button.btn.col-xs-12.col-sm-12.col-md-12.col-lg-12(type='submit') Edit
								div.form-group
									a.btn.cancel.col-xs-12.col-sm-12.col-md-12.col-lg-12(href='/blog') Cancel